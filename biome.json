{
	"$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",

	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},

	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!node_modules",
			"!.next",
			"!dist",
			"!build",
			"!.turbo",
			"!coverage",
			"!out",
			"!!**/routeTree.gen.ts",
			"!!**/*.d.ts",
			"!!**/dist",
			"!!**/build"
		]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},

	"javascript": {
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "double",
			"jsxQuoteStyle": "double",
			"trailingCommas": "all",
			"bracketSpacing": true,
			"arrowParentheses": "always"
		}
	},

	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,

			"suspicious": {
				"noUnknownAtRules": "off"
			},

			"performance": {
				"noImgElement": "off"
			},

			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
